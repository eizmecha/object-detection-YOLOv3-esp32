<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="super_hybrid">
    <pose>0 0 0.3 0 0 0</pose>

    <!-- =========================
         BASE LINK
    ========================== -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>

      <inertial>
        <pose>-0.06 0 0 0 0 0</pose>
        <mass>2.5</mass>
        <inertia>
          <ixx>0.20</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.15</iyy>
          <iyz>0</iyz>
          <izz>0.25</izz>
        </inertia>
      </inertial>

      <collision name="base_link_collision">
        <pose>0 0 -0.05 0 0 0</pose>
        <geometry>
          <box>
            <size>0.70 1.13 0.12</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>500000.0</kp>
              <kd>50.0</kd>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>

      <visual name="base_link_visual">
        <geometry>
          <mesh>
            <scale>0.52 0.52 0.52</scale>
            <uri>model://super_vtol/meshes/super_wing.dae</uri>
          </mesh>
        </geometry>
        <material>
          <ambient>0.05 0.05 0.05 1</ambient>
          <diffuse>0.05 0.05 0.05 1</diffuse>
        </material>
      </visual>

      <!-- GPS sensor -->
      <sensor name="gps_sensor" type="gps">
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <plugin name="gz_gps_plugin" filename="libArduPilotPlugin.so">
          <ap_namespace>/gazebo</ap_namespace>
          <robotNamespace/>
          <frame_id>gps_link</frame_id>
          <link_name>base_link</link_name>
        </plugin>
      </sensor>

      <!-- Visual booms and motor cans (unchanged) -->
      <visual name="left_boom">
        <pose>-0.06 0.18 -0.0175 0 1.5707 0</pose>
        <geometry>
          <cylinder>
            <length>0.50</length>
            <radius>0.008</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>

      <visual name="right_boom">
        <pose>-0.06 -0.18 -0.0175 0 1.5707 0</pose>
        <geometry>
          <cylinder>
            <length>0.50</length>
            <radius>0.008</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>

      <visual name="motor_fr">
        <pose>0.19 -0.18 0.003 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.025</length>
            <radius>0.016</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <visual name="motor_rr">
        <pose>-0.31 -0.18 0.003 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.025</length>
            <radius>0.016</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <visual name="motor_fl">
        <pose>0.19 0.18 0.003 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.025</length>
            <radius>0.016</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <visual name="motor_rl">
        <pose>-0.31 0.18 0.003 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.025</length>
            <radius>0.016</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <visual name="motor_pusher">
        <pose>-0.16 0 0 0 1.57 0</pose>
        <geometry>
          <cylinder>
            <length>0.035</length>
            <radius>0.018</radius>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- =========================
         VTOL ROTORS (4x vertical)
    ========================== -->
    <link name="rotor_0">
      <pose>0.19 -0.18 0.018 0 0 0</pose>
      <inertial>
        <mass>0.04</mass>
        <inertia>
          <ixx>5e-5</ixx>
          <iyy>5e-5</iyy>
          <izz>5e-5</izz>
        </inertia>
      </inertial>
      <visual name="rotor_0_visual">
        <geometry>
          <mesh>
            <scale>0.7 0.7 0.7</scale>
            <uri>model://super_vtol/meshes/vtol_prop_ccw.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="rotor_0_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_0</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.003</damping>
        </dynamics>
      </axis>
    </joint>

    <link name="rotor_1">
      <pose>-0.31 0.18 0.018 0 0 0</pose>
      <inertial>
        <mass>0.04</mass>
        <inertia>
          <ixx>5e-5</ixx>
          <iyy>5e-5</iyy>
          <izz>5e-5</izz>
        </inertia>
      </inertial>
      <visual name="rotor_1_visual">
        <geometry>
          <mesh>
            <scale>0.7 0.7 0.7</scale>
            <uri>model://super_vtol/meshes/vtol_prop_ccw.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="rotor_1_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_1</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.003</damping>
        </dynamics>
      </axis>
    </joint>

    <link name="rotor_2">
      <pose>0.19 0.18 0.018 0 0 0</pose>
      <inertial>
        <mass>0.04</mass>
        <inertia>
          <ixx>5e-5</ixx>
          <iyy>5e-5</iyy>
          <izz>5e-5</izz>
        </inertia>
      </inertial>
      <visual name="rotor_2_visual">
        <geometry>
          <mesh>
            <scale>0.7 0.7 0.7</scale>
            <uri>model://super_vtol/meshes/vtol_prop_cw.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="rotor_2_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_2</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.003</damping>
        </dynamics>
      </axis>
    </joint>

    <link name="rotor_3">
      <pose>-0.31 -0.18 0.018 0 0 0</pose>
      <inertial>
        <mass>0.04</mass>
        <inertia>
          <ixx>5e-5</ixx>
          <iyy>5e-5</iyy>
          <izz>5e-5</izz>
        </inertia>
      </inertial>
      <visual name="rotor_3_visual">
        <geometry>
          <mesh>
            <scale>0.7 0.7 0.7</scale>
            <uri>model://super_vtol/meshes/vtol_prop_cw.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="rotor_3_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_3</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.003</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- =========================
         PUSHER ROTOR (forward thrust)
    ========================== -->
    <link name="rotor_pusher">
      <pose>-0.18 0 0 0 1.57 0</pose>
      <inertial>
        <mass>0.06</mass>
        <inertia>
          <ixx>8e-5</ixx>
          <iyy>8e-5</iyy>
          <izz>8e-5</izz>
        </inertia>
      </inertial>
      <visual name="rotor_pusher_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://super_vtol/meshes/vtol_prop_ccw.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <!-- KEY FIX: axis along +X so thrust is forward -->
    <joint name="rotor_pusher_joint" type="revolute">
      <parent>base_link</parent>
      <child>rotor_pusher</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <damping>0.003</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- =========================
         MAIN WING AERODYNAMICS (keep LiftDrag)
    ========================== -->
    <plugin filename="gz-sim-lift-drag-system" name="gz::sim::systems::LiftDrag">
      <a0>0.05</a0>
      <cla>4.25</cla>
      <cda>0.08</cda>
      <alpha_stall>0.35</alpha_stall>
      <cla_stall>0.0</cla_stall>
      <area>0.31</area>
      <air_density>1.2041</air_density>
      <forward>1 0 0</forward>
      <upward>0 0 1</upward>
      <link_name>base_link</link_name>
      <cp>-0.06 0 0</cp>
    </plugin>

    <!-- =========================
         ELEVONS (keep as you had)
    ========================== -->
    <link name="left_elevon">
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="left_elevon_visual">
        <geometry>
          <mesh>
            <scale>0.52 0.52 0.52</scale>
            <uri>model://super_vtol/meshes/super_elevon_left.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="left_elevon_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_elevon</child>
      <pose>-0.25 0.40 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.53</lower>
          <upper>0.53</upper>
        </limit>
        <dynamics>
          <damping>5.0</damping>
          <spring_stiffness>100.0</spring_stiffness>
        </dynamics>
      </axis>
    </joint>

    <plugin filename="gz-sim-lift-drag-system" name="gz::sim::systems::LiftDrag">
      <a0>0.15</a0>
      <cla>6.8</cla>
      <cda>0.06</cda>
      <area>0.04</area>
      <air_density>1.2041</air_density>
      <forward>1 0 0</forward>
      <upward>0 0 1</upward>
      <link_name>base_link</link_name>
      <control_joint_name>left_elevon_joint</control_joint_name>
      <control_joint_rad_to_cl>-4.0</control_joint_rad_to_cl>
    </plugin>

    <link name="right_elevon">
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="right_elevon_visual">
        <geometry>
          <mesh>
            <scale>0.52 0.52 0.52</scale>
            <uri>model://super_vtol/meshes/super_elevon_right.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="right_elevon_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_elevon</child>
      <pose>-0.25 -0.40 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.53</lower>
          <upper>0.53</upper>
        </limit>
        <dynamics>
          <damping>5.0</damping>
          <spring_stiffness>100.0</spring_stiffness>
        </dynamics>
      </axis>
    </joint>

    <plugin filename="gz-sim-lift-drag-system" name="gz::sim::systems::LiftDrag">
      <a0>0.15</a0>
      <cla>6.8</cla>
      <cda>0.06</cda>
      <area>0.04</area>
      <air_density>1.2041</air_density>
      <forward>1 0 0</forward>
      <upward>0 0 1</upward>
      <link_name>base_link</link_name>
      <control_joint_name>right_elevon_joint</control_joint_name>
      <control_joint_rad_to_cl>-4.0</control_joint_rad_to_cl>
    </plugin>

    <!-- =========================
         IMU LINK + SENSORS
    ========================== -->
    <link name="imu_link">
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>1e-9</ixx>
          <iyy>1e-9</iyy>
          <izz>1e-9</izz>
        </inertia>
      </inertial>

      <sensor name="imu_sensor" type="imu">
        <pose>0 0 0 3.141593 0 0</pose>
        <always_on>1</always_on>
        <update_rate>1000.0</update_rate>
      </sensor>

      <sensor name="mag_sensor" type="magnetometer">
        <always_on>1</always_on>
        <update_rate>100</update_rate>
      </sensor>

      <sensor name="air_speed" type="air_pressure">
        <always_on>1</always_on>
        <update_rate>100</update_rate>
        <pose>0.35 0 0.05 0 0 0</pose>
        <visualize>true</visualize>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
    </joint>

    <!-- =========================
         GZ SIM HELPERS
    ========================== -->
    <plugin filename="gz-sim-joint-state-publisher-system"
            name="gz::sim::systems::JointStatePublisher"/>

    <!-- =========================
         MOTOR MODEL (REAL THRUST)  <-- KEY CHANGE
    ========================== -->
    <!-- NOTE: If plugin filename differs on your system, replace the filename string.
         Typical names:
         - gz-sim-multicopter-motor-model-system
         - libgz-sim-multicopter-motor-model-system.so
    -->

    <!-- VTOL Motor 0 -->
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <joint_name>rotor_0_joint</joint_name>
      <link_name>rotor_0</link_name>
      <turning_direction>ccw</turning_direction>
      <max_rot_velocity>1800</max_rot_velocity>
      <motor_constant>8.5e-06</motor_constant>
      <moment_constant>0.016</moment_constant>
      <rotor_drag_coefficient>1.0e-06</rotor_drag_coefficient>
      <rolling_moment_coefficient>1.0e-06</rolling_moment_coefficient>
      <rotor_velocity_slowdown_sim>10</rotor_velocity_slowdown_sim>
    </plugin>

    <!-- VTOL Motor 1 -->
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <joint_name>rotor_1_joint</joint_name>
      <link_name>rotor_1</link_name>
      <turning_direction>ccw</turning_direction>
      <max_rot_velocity>1800</max_rot_velocity>
      <motor_constant>8.5e-06</motor_constant>
      <moment_constant>0.016</moment_constant>
      <rotor_drag_coefficient>1.0e-06</rotor_drag_coefficient>
      <rolling_moment_coefficient>1.0e-06</rolling_moment_coefficient>
      <rotor_velocity_slowdown_sim>10</rotor_velocity_slowdown_sim>
    </plugin>

    <!-- VTOL Motor 2 -->
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <joint_name>rotor_2_joint</joint_name>
      <link_name>rotor_2</link_name>
      <turning_direction>cw</turning_direction>
      <max_rot_velocity>1800</max_rot_velocity>
      <motor_constant>8.5e-06</motor_constant>
      <moment_constant>0.016</moment_constant>
      <rotor_drag_coefficient>1.0e-06</rotor_drag_coefficient>
      <rolling_moment_coefficient>1.0e-06</rolling_moment_coefficient>
      <rotor_velocity_slowdown_sim>10</rotor_velocity_slowdown_sim>
    </plugin>

    <!-- VTOL Motor 3 -->
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <joint_name>rotor_3_joint</joint_name>
      <link_name>rotor_3</link_name>
      <turning_direction>cw</turning_direction>
      <max_rot_velocity>1800</max_rot_velocity>
      <motor_constant>8.5e-06</motor_constant>
      <moment_constant>0.016</moment_constant>
      <rotor_drag_coefficient>1.0e-06</rotor_drag_coefficient>
      <rolling_moment_coefficient>1.0e-06</rolling_moment_coefficient>
      <rotor_velocity_slowdown_sim>10</rotor_velocity_slowdown_sim>
    </plugin>

    <!-- Pusher Motor -->
    <plugin filename="gz-sim-multicopter-motor-model-system" name="gz::sim::systems::MulticopterMotorModel">
      <joint_name>rotor_pusher_joint</joint_name>
      <link_name>rotor_pusher</link_name>
      <turning_direction>ccw</turning_direction>
      <max_rot_velocity>2200</max_rot_velocity>
      <motor_constant>1.4e-05</motor_constant>
      <moment_constant>0.010</moment_constant>
      <rotor_drag_coefficient>1.0e-06</rotor_drag_coefficient>
      <rolling_moment_coefficient>1.0e-06</rolling_moment_coefficient>
      <rotor_velocity_slowdown_sim>10</rotor_velocity_slowdown_sim>
    </plugin>

    <!-- =========================
         ARDUPILOT PLUGIN (CONTROL)
    ========================== -->
    <plugin name="ArduPilotPlugin" filename="libArduPilotPlugin.so">
      <connectionTimeoutMaxCount>5</connectionTimeoutMaxCount>
      <lock_step>1</lock_step>

      <modelXYZToAirplaneXForwardZDown degrees="true">
        0 0 0 180 0 0
      </modelXYZToAirplaneXForwardZDown>
      <gazeboXYZToNED degrees="true">
        0 0 0 180 0 90
      </gazeboXYZToNED>

      <sensors>
        <imu>imu_sensor</imu>
        <gps>gps_sensor</gps>
        <magnetometer>mag_sensor</magnetometer>
        <air_pressure>air_speed</air_pressure>
      </sensors>

      <!-- Elevons -->
      <control channel="0">
        <jointName>left_elevon_joint</jointName>
        <useForce>1</useForce>
        <multiplier>1.0</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>POSITION</type>
        <p_gain>10.0</p_gain>
      </control>

      <control channel="1">
        <jointName>right_elevon_joint</jointName>
        <useForce>1</useForce>
        <multiplier>1.0</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>POSITION</type>
        <p_gain>10.0</p_gain>
      </control>

      <!-- Pusher (channel 2) -->
      <control channel="2">
        <jointName>rotor_pusher_joint</jointName>
        <useForce>1</useForce>
        <multiplier>1250</multiplier>
        <offset>0</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.20</p_gain>
        <cmd_max>2200</cmd_max>
        <cmd_min>-2200</cmd_min>
      </control>

      <!-- VTOL motors ch4-7 -->
      <control channel="4">
        <jointName>rotor_0_joint</jointName>
        <useForce>1</useForce>
        <multiplier>1500</multiplier>
        <offset>0</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.10</p_gain>
        <cmd_max>1800</cmd_max>
        <cmd_min>-1800</cmd_min>
      </control>

      <control channel="5">
        <jointName>rotor_1_joint</jointName>
        <useForce>1</useForce>
        <multiplier>1500</multiplier>
        <offset>0</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.10</p_gain>
        <cmd_max>1800</cmd_max>
        <cmd_min>-1800</cmd_min>
      </control>

      <control channel="6">
        <jointName>rotor_2_joint</jointName>
        <useForce>1</useForce>
        <multiplier>-1500</multiplier>
        <offset>0</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.10</p_gain>
        <cmd_max>1800</cmd_max>
        <cmd_min>-1800</cmd_min>
      </control>

      <control channel="7">
        <jointName>rotor_3_joint</jointName>
        <useForce>1</useForce>
        <multiplier>-1500</multiplier>
        <offset>0</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.10</p_gain>
        <cmd_max>1800</cmd_max>
        <cmd_min>-1800</cmd_min>
      </control>
    </plugin>
  </model>
</sdf>
